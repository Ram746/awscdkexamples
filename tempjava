package com.example.demo;

import java.util.ArrayList;
import java.util.Comparator;

class JobGreedy {
	static class Interval {
		int first;
		int deadline;

		public Interval(int f, int s) {
			this.first = f;
			this.deadline = s;
		}
	}

	public static int minimizeSegment(ArrayList<Interval> list) {
		final Comparator<JobGreedy.Interval> arrayComparator = new Comparator<JobGreedy.Interval>() {
			@Override
			public int compare(Interval o1, Interval o2) {
				return Integer.compare(o1.first, o2.first);
			}
		};
		list.sort(arrayComparator);
		System.out.println(list);
		list.add(new Interval(Integer.MAX_VALUE, Integer.MIN_VALUE));
		int start = 1;
		int end = 1 - 1;
		int cnt = 0;
		for (int i = 0; i < list.size();) {
			if (list.get(i).first <= start) {
				end = Math.max(list.get(i++).deadline, end);
			} else {
				start = end;
				++cnt;
				if (list.get(i).first > end || end >= 10) {
					break;
				}
			}
		}
		
		return cnt;
	}

	public static void main(String args[]) {
		ArrayList<Interval> A = new ArrayList<Interval>();
		A.add(new Interval(1, 3));
		A.add(new Interval(2, 4));
		A.add(new Interval(2, 10));
		A.add(new Interval(2, 3));
		A.add(new Interval(1, 1));
		//Interval X = new Interval(1, 10);
		System.out.println(minimizeSegment(A));
	}
}
